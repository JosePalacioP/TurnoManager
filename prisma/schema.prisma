generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Definici贸n de Roles
enum Role {
  ADMIN
  CLIENT
}

// Definici贸n de Estados de Cita
enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// MODELO: Users
model User {
  id        Int       @id @default(autoincrement()) // PK
  email     String    @unique
  password  String
  name      String
  role      Role      @default(CLIENT)  // Por defecto todos son Clientes
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones Un usuario tiene muchas citas
  appointments Appointment[]
}

model Appointment {
  id        Int       @id @default(autoincrement()) // PK
  date      DateTime  
  status    AppointmentStatus @default(PENDING)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones
  // Relaci贸n con User
  userId    Int
  user      User      @relation(fields: [userId], references: [id])

  //Relaci贸n con Service
  serviceId Int
  service   Service   @relation(fields: [serviceId], references: [id])
}

model Service {
  id        Int       @id @default(autoincrement()) // PK
  name      String
  price     Float
  duration  Int   // En minutos
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones
  appointments Appointment[]
}